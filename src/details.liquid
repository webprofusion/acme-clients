---
pagination:
  data: clients.list
  size: 1
  alias: item
permalink: "clients/{{ item.title | slug }}/"
layout: default
---

<!-- Header Section -->
<div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 text-white">
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-4xl mx-auto">      <!-- Breadcrumbs -->
      <nav class="mb-8">
        <div class="flex items-center space-x-2 text-sm bg-white/25 backdrop-blur-md rounded-full px-4 py-2 border border-white/30 shadow-lg">
          <a href="/" class="text-gray-800 hover:text-blue-600 transition-colors font-medium">Home</a>
          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/" class="text-gray-800 hover:text-blue-600 transition-colors font-medium">ACME Clients</a>
          <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 font-semibold">{{ item.title }}</span>
        </div>
      </nav>
      
      <div class="text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
          <span class="bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent">
            {{ item.title }}
          </span>
        </h1>
        
        {% if item.summary %}
          <p class="text-lg md:text-xl text-blue-100 leading-relaxed max-w-3xl">
            {{ item.summary }} 
          </p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<main class="container mx-auto py-12 max-w-4xl">

  <div class="pt-2 pb-4 mt-2 max-w-xxl">
<p class="text-gray-700 leading-relaxed mb-6 text-sm">
{{ item.description }}</p>

    <p class="ms-4">
      <span title="Website">🏠</span>
      <a class="ml-1" href="{{ item.website }}" target="_blank" title="Website">{{ item.website }}
      </a>
    </p>

    <h3 class="mt-4">Documentation</h3>
    <p class="ms-4">
      <span title="Documentation">📝</span>
      <a class="ml-1" href="{{ item.docs }}" target="_blank" title="Documentation">{{item.docs}}</a>
    </p>

    <h3 class="mt-4">Community</h3>
    <p class="ms-4">
      <span title="Community">🧑🏿‍💻</span>
      <a class="ml-1" href="{{ item.community }}" target="_blank" title="Community">{{item.community}}</a>
    </p>

    {% if item.source %}
        <h3 class="mt-4">Source Code</h3>
    <p class="ms-4">
      <span title="Source">🧑🏿‍💻</span>
      <a class="ml-1" href="{{ item.source }}" target="_blank" title="Source">{{item.source}}</a>
    </p>
    {% endif %}

    {% if item.pros %}
      <h3 class="mt-4">Pros</h3>
      <ul class="list-disc ml-8">
        {%- for c in item.pros -%}
        <li>{{ c }}</li>
        {%- endfor -%}
      </ul>
    {% endif %}

    {% if item.cons %}
      <h3>Cons</h3>
      <ul class="list-disc ml-8">
        {%- for c in item.cons -%}
        <li>{{ c }}</li>
        {%- endfor -%}
      </ul>
    {% endif %}


 {% if item.features %}
      <h3 class="mt-2">Features</h3>
      <ul class="list-disc ml-8">
        {% for c in item.features -%}
          {% for f in clients.features -%}
          
           {% if f.key==c -%}
            <li>{{f.description}}</li>
            {% endif -%}
          {% endfor -%}
        {% endfor -%}
      </ul>
    {% endif %}
  </div>

  <div class="p-40mt-2 max-w-xxl">
    <p class="mt-4 text-slate-400"> Categories:

      {%- for c in item.categories -%}
      <span class="p-1 rounded bg-slate-100 ml-1 mr-1 lowercase"><a href="/categories/{{ c | slug }}">{{ c }}</a></span>
      {%- endfor -%}
    </p>

    <p class="mt-2 text-slate-400">
      Operating Systems:
      {%- for c in item.os -%}
      <span class="text-slate-400 p-1 rounded bg-gray-200 ml-1 mr-1 lowercase">{{ c }}</span>
      {%- endfor -%}
    </p>

    <p class="mt-2 text-slate-400">
      Technology:
      {%- for c in item.tech -%}
      <span class="text-slate-400 p-1 rounded bg-gray-50 ml-1 mr-1 lowercase">{{ c }}</span>
      {%- endfor -%}
    </p>
  </div>

      {% if item.badges %}
  <h3 class="mt-2">Activity</h3>
  <p class="mt-2">

    {%- for b in item.badges -%}
    <img src="{{b}}" alt="activity badge" class="inline-block ml-1 mr-1" />
    {%- endfor -%}
  </p>
     {% endif %}

  <p class="mt-6">
    To submit edits to the information listed here, see our <a class="font-bold hover:text-slate-400" href="https://github.com/webprofusion/acme-clients" target="_blank">github project</a>
  </p>

</div>
</main>
